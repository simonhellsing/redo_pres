// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Presentation {
  id                  String   @id @default(cuid())
  companyName         String   // Presenter (accounting firm)
  logoUrl             String?  // Presenter logo
  primaryColor        String   @default("#3B82F6")
  themeMode           String   @default("dark") // "dark" or "light"
  customerCompanyName String   // Customer whose financials are shown
  customerLogoUrl     String?  // Customer logo
  presentationTitle   String   @default("Financial Update 2025")
  financialData       String   // JSON string of financial data
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
